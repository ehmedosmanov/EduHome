@model RegisterVM
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="my-div" style="margin-bottom: 20px;">
                                    <input asp-for="Name" placeholder="Name" style="margin:0;">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="my-div" style="margin-bottom: 20px;">
                                    <input asp-for="Surname" placeholder="Surname" style="margin:0;">
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div class="my-div" style="margin-bottom: 20px;">
                                    <input asp-for="Username" placeholder="Username" style="margin:0;">
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="my-div" style="margin-bottom: 20px;">
                                    <input asp-for="Email" placeholder="Email" style="margin:0;">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="my-div" style="margin-bottom: 20px;">
                                    <input asp-for="Password" placeholder="Password" style="margin:0;">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="my-div" style="margin-bottom: 20px;">
                                    <input asp-for="CheckPassword" placeholder="Reapet Password" style="margin:0;">
                                    <span class="text-danger" asp-validation-for="CheckPassword"></span>
                                </div>

                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" asp-for="IsRemember">
                                        <label for="remember">Remember me</label>
                                        <a asp-action="ForgotPassword">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

                                        }