@model List<Blog>

@if (Model.Count == 0)
{
    @foreach (Blog item in ViewBag.AllBlogs)
    {
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="single-blog mb-60">
                <div class="blog-img">
                    <a href="#"><img src="img/blog/@item.Img" alt="blog"></a>
                    <div class="blog-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </div>
                <div class="blog-content">
                    <div class="blog-top">
                        <p>By @item.By / @item.Data.ToString("MMM dd, yyyy") / <i class="fa fa-comments-o"></i> 4</p>
                    </div>
                    <div class="blog-bottom">
                        <h2><a href="blog-details.html">@item.Name</a></h2>
                        <a href="blog-details.html">read more</a>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    @foreach (Blog item in Model)
    {
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="single-blog mb-60">
                <div class="blog-img">
                    <a href="#"><img src="img/blog/@item.Img" alt="blog"></a>
                    <div class="blog-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </div>
                <div class="blog-content">
                    <div class="blog-top">
                        <p>By @item.By / @item.Data.ToString("MMM dd, yyyy") / <i class="fa fa-comments-o"></i> 4</p>
                    </div>
                    <div class="blog-bottom">
                        <h2><a href="blog-details.html">@item.Name</a></h2>
                        <a href="blog-details.html">read more</a>
                    </div>
                </div>
            </div>
        </div>
    }
}
