@model List<Teacher>
<div class="row">
   @foreach (Teacher teacher in Model)
    {
        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="single-teacher mb-45">
                <div class="single-teacher-img">
                    <a href="teacher-details.html"><img src="~/img/teacher/@teacher.Img" alt="teacher"></a>
                </div>
                <div class="single-teacher-content text-center">
                    <h2><a href="teacher-details.html">@teacher.Name</a></h2>
                    <h4>@teacher.Role</h4>
                    <ul>
                        <li><a href="@teacher.FacebookLink"><i class="zmdi zmdi-facebook"></i></a></li>
                        <li><a href="@teacher.PinterestLink"><i class="zmdi zmdi-pinterest"></i></a></li>
                        <li><a href="@teacher.VimeoLink"><i class="zmdi zmdi-vimeo"></i></a></li>
                        <li><a href="@teacher.TwitterLink"><i class="zmdi zmdi-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>