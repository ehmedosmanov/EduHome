@model List<Course>		
<!-- Banner Area Start -->
		<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>courses</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
		<!-- Banner Area End -->
        <!-- Course Start -->
        <div class="course-area pt-150 pb-150">
            <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="course-title">
                        <h3>search courses</h3>
                    </div>
                    <div class="course-form">
                        <form method="get">
                        <input id="searchInput" placeholder="Search" />
                            <button type="submit">search</button>
                        </form>
                    </div>
                </div>
            </div>     
            <div class="row" id="myCourses">

            @foreach (Course course in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course mb-70">
                        <div class="course-img">
                            <a href="course-details.html">
                                <img src="img/course/@course.Img" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a href="course-details.html">@course.Name</a></h3>
                            <p>@course.Description</p>
                            <a class="default-btn" href="course-details.html">read more</a>
                        </div>
                    </div>
                </div>
            }

            </div>

            <div class="row">
               <div class="col-12 text-center mt-3">
                   <a class="default-btn" style="cursor: pointer;" id="loadMore">Load More</a>
                <input value="@ViewBag.CoursesCount" type="hidden" id="coursesCount"/>
               </div>
            </div>
        </div> 
        </div>       
        <!-- Course End -->



 @section Scripts {
    <script asp-append-version="true" src="~/js/loadMore.js"></script>
    <script asp-append-version="true" src="~/js/coursesSearch.js"></script>
 }