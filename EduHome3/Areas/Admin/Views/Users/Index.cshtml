@model List<UserVM>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h3 class="card-title">Users</h3>
                    <div>
                        <a class="btn btn-primary" asp-action="Create">Create</a>
                    </div>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    Username
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Role
                                </th>

                                <th>
                                    Status
                                </th>
                                <th class="d-flex justify-content-end">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name @item.Surname
                                    </td>
                                    <td>
                                        @item.Username
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.Role
                                    </td>

                                    <td>

                                        @if (!item.IsDeactive)
                                        {
                                            <div class="badge badge-success ">Active</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-danger ">Deactive</div>
                                        }
                                    </td>
                                    <td class="d-flex justify-content-end">
                                        <a class="nav-link" class="btn btn-primary" style="display:inline-flex; justify-content:center; align-items:center;">
                                            <i class="icon-mail menu-icon"></i>
                                        </a>
                                        <a asp-action="ResetPassword" asp-route-id="@item.Id" class="btn btn-warning m-2 text-white">Reset Password</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary m-2">Update</a>
                                        @if (!item.IsDeactive)
                                        {
                                            <a style="width:126px" asp-action="Activity" asp-route-id="@item.Id" class="btn  btn-danger m-2">Deactivated</a>
                                        }
                                        else
                                        {
                                            <a style="width:126px" asp-action="Activity" asp-route-id="@item.Id" class="btn  btn-success m-2">Activated</a>
                                        }


                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning m-2 text-white">Delete</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}







