@model About
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h3 class="card-title">About</h3>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th class="d-flex justify-content-end">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                                <tr>
                                    <td>
                                    <img src="~/img/about/@Model.Img" style="width: 200px; height:150px; border-radius:5px;">
                                    </td>
                                    <td>
                                        @Html.Raw(@Model.Title)
                                    </td>
                                   
                                    <td>
                                    <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-warning m-2 text-white">Detail</a>
                                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary m-2">Update</a>                                       
                                    </td>
                                </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
