@model List<Feedback>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h3 class="card-title">Feedbacks</h3>
                    <div>
                        <a class="btn btn-primary" asp-action="Create">Create</a>
                    </div>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Author
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    Status
                                </th>
                                <th class="d-flex justify-content-end">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Feedback item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/testimonial/@item.AuthorImg" style="width: 50px; height:50px; border-radius:50%; object-fit:cover;">
                                    </td>
                                    <td>
                                        @item.Author
                                    </td>
                                    <td>
                                        @item.Role
                                    </td>
                                    <td>
                                        @if (!item.IsDeactive)
                                        {
                                            <div class="badge badge-success">Active</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-danger">Deactive</div>

                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning m-2 text-white">Detail</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary m-2">Update</a>
                                        @if (!item.IsDeactive /*aktivdise*/)
                                        {
                                            <a style="width:126px" asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger m-2">Deactivated</a>
                                        }
                                        else
                                        {
                                            <a style="width:126px" asp-action="Activity" asp-route-id="@item.Id" class="btn btn-success m-2">Activated</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
