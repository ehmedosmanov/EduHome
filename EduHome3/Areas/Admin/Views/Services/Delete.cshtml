@model Service


<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Delete Service</h4>
                <h5>Are you sure to delete this @Model.Name</h5>
                <form method="post" class="forms-sample mt-4">
                    <button type="submit" class="btn btn-danger mr-2">Yes</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}